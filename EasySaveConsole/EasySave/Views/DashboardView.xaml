<Page x:Class="EasySave.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="650">

    <Grid>
        <Border Background="#FF0F52BA" Height="41" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Welcome" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontFamily="Bahnschrift Light" FontSize="18" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        <Button Content="Create backup task" Background="#FF0F52BA" Foreground="White" FontFamily="Bahnschrift Light" FontSize="18" HorizontalAlignment="Left" Height="168" Margin="88,130,0,0" VerticalAlignment="Top" Width="196" Click="AddBackupClick"/>
        <Button Content="View backups" Background="#FF0F52BA" Foreground="White" FontFamily="Bahnschrift Light" FontSize="18" HorizontalAlignment="Left" Height="168" Margin="355,130,0,0" VerticalAlignment="Top" Width="196" Click="BackupViewClick"/>

    </Grid>
</Page>
