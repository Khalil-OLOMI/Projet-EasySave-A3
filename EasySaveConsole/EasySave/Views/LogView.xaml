<Page x:Class="EasySave.Views.LogView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="650">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#FF0F52BA" Grid.Row="0" Height="40">
            <!-- Header content goes here -->
            <StackPanel HorizontalAlignment="Left" Margin="0,0,0,0" Orientation="Horizontal">
                <TextBlock Text="{Binding LogHeaderText}" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontFamily="Bahnschrift Light" FontSize="18" Margin="20,5,0,0"/>
            </StackPanel>
        </Border>
        <!-- Main Content Area -->
        <Border Background="White" Grid.Row="1">
            <DataGrid
            x:Name="Logs"
            AutoGenerateColumns="False"
            ItemsSource="{Binding Logs, Mode=TwoWay}"
            Margin="10" Background="White"
            MouseDoubleClick="DetailLogClick">
                <DataGrid.Columns>
                    <DataGridTextColumn
                    Header="Date d'exécution"
                    MinWidth="100"
                    Width="*"
                    Binding="{Binding Horodatage}"
                    IsReadOnly="True"/>
                    <DataGridTextColumn
                    Header="Name"
                    MinWidth="100"
                    Width="*"
                    Binding="{Binding Name}"
                    IsReadOnly="True"/>
                    <DataGridTextColumn
                    Header="File Size(KO)"
                    MinWidth="100"
                    Width="*"
                    Binding="{Binding FileSize}"
                    IsReadOnly="True"/>
                    <DataGridTextColumn
                    Header="Time(ms)"
                    MinWidth="100"
                    Width="*"
                    Binding="{Binding FileTransferTime}"
                    IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
